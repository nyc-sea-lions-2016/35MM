<div class='row'>
  <div class='medium-4 columns'>
    <%= image_tag("Oscar1", :id => "user-profile-pic") %>
      <div class='user-information'>
        <h1> <%= @user.username %> </h1>
          <p>Member Since: <%= @user.created_at %></p>
          <p>Total Reviews: <%= @user.review_count %></p>
          <p>Total Comments: <%= @user.comment_count %></p>
      </div>
  </div>

  <div class='medium-8 columns review-section-wrapper'>
    <h3 class='user-reviews-comments-headers'>Reviews</h3>
    <% @user.reviews.each do |rev| %>
      <h4 class='user-review-film-title'><%= rev.film.title %></h4>
      <br>
      <p class='user-review-content'><%= rev.content %>
    <% end %>

    <h3 class='user-reviews-comments-headers'>Comments</h3>
    <% @user.comments.each do |com| %>
      <p class='user-comment-content'><%= com.content %></p>
    <% end %>
  </div>
</div>
