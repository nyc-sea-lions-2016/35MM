<div id="user-show-container">
  <div class='row'>
    <div class='medium-4 columns'>
      <%= image_tag("Oscar1") %>
        <div id='user-information'>
          <h1> <%= @user.username %> </h1>
            <p>Member Since: <%= @user.created_at %></p>
            <p>Total Reviews: <%= @user.review_count %></p>
            <p>Total Comments: <%= @user.comment_count %></p>
            <a href= "#" class="button"><i class="fa fa-envelope fa-1x"></i>Message</a>
            <a href= "#" class="button"><i class="fa fa-location-arrow fa-1x"></i>Location</a>
            <a href= "#" class="button"><i class="fa fa-film fa-1x"></i>Highest Rated Films</a>
        </div>
    </div>

    <div class="medium-8 columns">
      <h2>Reviews</h2>
      <% @user.reviews.each do |rev| %>
        <h3><%= rev.film.title %></h4>
        <br>
        <p><%= rev.content %>
      <% end %>

      <h2>Comments</h2>
      <% @user.comments.each do |com| %>
        <p><%= com.content %></p>
      <% end %>
    </div>
  </div>
</div>
