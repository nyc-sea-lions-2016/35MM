<div class='review-form-container'>
  <h1 class='new-review-header'>Write a Review</h1>

    <%= form_for [@film, @review] do |f| %>
    <div class='row'>
      <div class='medium-6 medium-centered columns'>
        <%= f.label :content %>
        <%= f.text_field :content %>
      </div>
    </div>

    <div class='row'>
      <div class='medium-6 medium-centered columns'>
        <%= f.submit 'Review', class: 'button' %>
      </div>
    </div>
  <% end %>
</div>