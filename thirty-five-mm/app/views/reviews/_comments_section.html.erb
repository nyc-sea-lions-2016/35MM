<div class="comment-listing-container">
  <ul class="comment-listing">
  <h2>Comments</h2>
    <% @review.comments.reverse.each do |comment| %>
      <div class='individual-comment'>
        <p><%= comment.content %></p>
        <small>Written by <%= link_to comment.user.username, user_path(comment.user) %> at <%= comment.created_at.strftime('%F') %></small>
        <% if comment.user == current_user %>
          <%= link_to 'Delete Comment', review_comment_path(@review, comment),
                                        method: :delete,
                                        data: { confirm: "Are you sure?" },
                                        remote: true,
                                        class: 'button delete-comment-button' %>
        <% end %>
      </div>
    <% end %>
    </ul>
    <div>
      <%= link_to 'Create a New Comment', new_review_comment_path(@review), class: 'button create-new-review-comment-button' %>
    </div>
</div>
