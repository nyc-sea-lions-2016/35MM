<div class='comment-listing-container'>
  <ul class="comment-listing">
    <h2>Comment Section</h2>
      <% @film.comments.each do |comment| %>
    <div class='individual-comment'>
      <%= image_tag("Oscar1", height: "48", width: "48") %>
      <small>Written by <%= link_to comment.user.username, user_path(comment.user) %> at <%= comment.created_at.strftime('%F') %></small>
      <hr>
      <p><%= comment.content %><p>
      <% if comment.user == current_user %>
      <div>
        <%= link_to "Delete Comment", film_comment_path(@film, comment),
                                      method: :delete,
                                      data: { confirm: "Are you sure?" },
                                      remote: true,
                                      class: "delete-comment button" %>
      </div>
      <% end %>
    </div>
      <% end %>
  </ul>
</div>
