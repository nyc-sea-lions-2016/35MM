<div id='comment-listing-container'>
  <ul>
    <h2>Comment Section</h2>
      <% @film.comments.each do |comment| %>
    <li class='individual-comment'>
      <p><%= comment.content %><p>
      <%= link_to 'Delete Comment', "/films/#{@film.id}/comments/#{comment.id}", class: 'button delete-comment-button' %>
    </li>
      <% end %>
  </ul>
</div>
