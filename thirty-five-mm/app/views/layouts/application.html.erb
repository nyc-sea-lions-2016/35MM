  <%= csrf_meta_tags %>
</head>
<body>

<nav class='top-bar' data-topbar role='navigation'>
  <ul class='title-area'>
    <li class='name'>
      <h2>35 MM</h2>
    </li>
  </ul>

  <section class='top-bar-section'>
    <ul class='right'>
    <% if logged_in? %>
      <!-- Placeholder... these options will be reserved for trustworthy reviewers -->
      <li><%= link_to 'Write a New Review', '#' %></li>
      <li><%= link_to 'Create Entry for Film', '#' %></li>
    <% else %>
      <li><%= link_to 'Login', login_path %></li>
      <li><%= link_to 'Register', login_path %></li>
    <% end %>
  </ul>

    <ul class='left'>
      <li><%= link_to 'Categories Index', '' %></li>
    </ul>
  </section>
</nav>

<%= yield %>

</body>
</html>
